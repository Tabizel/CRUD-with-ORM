<%- include ('../partials/header.ejs') %>

<div class="container">
  <h1>Pessoas</h1>
  <p><a href="/">Voltar</a></p>
  <p><a href="/pessoas/create">Adicionar Pessoa</a></p>

  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>Nome</th>
      <th>Nascimento</th>
      <th>Cargo</th>
      <th>Ações</th>
    </tr>
    <% pessoas.map( pessoa => { %>
    <tr>
      <td><%= pessoa.nome %></td>
      <td><%= pessoa.nascimento %></td>
      <td><%= pessoa.cargo %></td>
      <td>
        <div class="btn-group" role="group">
          <a href="pessoas/edit/<%= pessoa.id %>" class="btn btn-default"
            >Editar</a
          >
          <a href="pessoas/delete/<%= pessoa.id %>" class="btn btn-default"
            >Excluir</a
          >
        </div>
      </td>
    </tr>

    <% }) %>
  </table>

  <%- include ('../partials/footer.ejs') %>
</div>
